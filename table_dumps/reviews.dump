    review_id SERIAL PRIMARY KEY,
    user_id INT REFERENCES Users(user_id),
    game_id INT REFERENCES Games(game_id),
    rating INTEGER,
    review_date TIMESTAMP,
    is_verified_owner BOOLEAN
);

